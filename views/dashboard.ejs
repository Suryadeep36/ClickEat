        </div>
    
    
    <% }) %>
  </div>
    


<script>
    let com=document.getElementsByClassName("complete");
    Array.from(com).map((comBtn, i) => {
        comBtn.addEventListener('click',() => {
            fun(i);
        })
    })
    function fun(i) {
        com[i].style.backgroundColor=" rgb(3, 182, 3)";
        com[i].style.color="white";
        com[i].style.border="3px solid green";
        com[i].innerHTML="Completed";
        com[i].removeEventListener("click",fun)
    }
</script>
