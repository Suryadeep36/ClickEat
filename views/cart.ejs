    <script>
        let pop= document.getElementById("Order");
        pop.addEventListener("click",()=>{
             document.querySelector(".mainpopup").classList.add("show");
            });
        
        let can=document.getElementById("cancel");
        can.addEventListener("click",()=>{
            document.querySelector(".mainpopup").classList.remove("show")
        })
       
        let con=document.getElementById("confirmOrder");
        con.addEventListener("click",()=>{
            document.querySelector(".mainpopup").classList.remove("show")
